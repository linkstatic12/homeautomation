<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        x:Class="TimeAttendanceSystem.Reports.UserControls.RFDepts"
        Title="SelectEmpWindow" Height="407.067" Width="368.905">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>

        <telerik:RadGridView x:Name="lstView_depts" SelectionMode="Extended" SelectedItem="{Binding selectedDept, Mode=TwoWay}" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="263" Width="351" Grid.ColumnSpan="2" AutoGenerateColumns="False" SelectionChanged="lstView_emps_SelectionChanged">
            <telerik:RadGridView.Columns>
                <telerik:GridViewSelectColumn />
                <telerik:GridViewDataColumn Header="Name"
											    DataMemberBinding="{Binding DeptName}" />
                <telerik:GridViewDataColumn Header="ID"
											    DataMemberBinding="{Binding DeptID}" />
            </telerik:RadGridView.Columns>


        </telerik:RadGridView>
        <Button x:Name="selectbutton" IsDefault="True" Content="Select" HorizontalAlignment="Left" Margin="142,327,0,0" VerticalAlignment="Top" Width="75" Click="selectbutton_Click"/>

    </Grid>
</Window>
